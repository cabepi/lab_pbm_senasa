{
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/unipago/(.*)",
            "destination": "/api/proxy?path=$1"
        },
        {
            "source": "/unipago/(.*)",
            "destination": "/api/proxy?path=$1"
        },
        {
            "source": "/((?!api/|Health|health).*)",
            "destination": "/index.html"
        }
    ]
}